mixin team-block
  section#team.team-block.grid-block
    h2.heading The Team
    p.subheading A look under the hood

    .grid
      each astronaut in data.astronauts
        +astronaut-card(
          astronaut.name,
          astronaut.image,
          astronaut.desc,
          astronaut.phone
        )

      a(href=`mailto:${data.contactMail}`).item.-promotion
        span.text Come and work with us!
        .right-arrow

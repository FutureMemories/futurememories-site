mixin center-block(title, text, src, icon, devices, background, color, waves)
  .center-block(style=`${background ? `background:${background};` : ''}${color ? `color:${color};` : ''}`)
    .inner(class=!src && `-block`, class=src.align && `-${src.align}`)
      if (src)
        img(src=src.path ? src.path : src)

      .content
        if (devices)
          img(src=icon)

        .block(class=text && `-center`)
          if (title)
            h1= title

          if (waves)
            +wave-object()

          if (text)
            p= text

          if (devices)
            if (devices.ios)
              a(href=devices.ios, target="_blank")
                img(src='./images/icons/app-store.svg')

            if (devices.andriod)
              a(href=devices.andriod)
                img(src='./images/icons/google-play.svg')
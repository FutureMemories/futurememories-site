mixin case-block(items, type, current)
  section#cases.case-block.grid-block(class=`-${type}`)
    if type === 'preview'
      h2.heading Selected Projects
      p.subheading What we have done so far

    .grid(class=(type === 'more-projects') && `-more-projects`)
      each item in items
        if (item.name !== current)
          .item
            +case-card(
              item.name,
              item.image,
              item.desc,
              item.client,
              item.type,
              item.actions,
              type === 'preview'
            )

      if type === 'preview'
        a(href=prod ? '/cases' : '/cases.html').item.-promotion
          span.text See more cases & clients
          .right-arrow

      if type === 'full'
        a(href=`mailto:${data.contactMail}`).item.-promotion
          span.text Create something awesome with us!
          .right-arrow

mixin text-block(title, text, content = [], background, color, modifier)
  .text-block(style=`${background ? `background:${background};` : ''}${color ? `color:${color};` : ''}`)
    .inner(class=modifier)
      h1.subheading= title
      p.text= text

      if content[0] === 'image'
        img(src=content[2], alt=content[1], class=!content[3] && `-shadow`, style=`${content[3] ? `width:${content[3]}px;` : ''}`)
      else if content[0] === 'link'
        a.link(href=content[2])= content[1]

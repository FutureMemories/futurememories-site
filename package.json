{
  "private": true,
  "name": "futurememories",
  "version": "1.0.0",
  "scripts": {
    "start": "npm run prebuild -s && if-env NODE_ENV=production && npm run -s serve || npm run -s dev",
    "build": "preact build --prerender --template src/template.html --no-service-worker",
    "postbuild": "node postbuild.js",
    "prebuild": "node prebuild.js",
    "serve": "preact build --prerender --template src/template.html && preact serve",
    "dev": "preact watch",
    "lint": "standard",
    "test": "jest",
    "pre-commit-start": "echo \"pre-commit: running linter, run 'npm run lint -- --fix' and fix issues if failed. \" && exit 0",
    "pre-commit-done": "echo \"âœ… pre-commit completed\" && exit 0"
  },
  "precommit.silent": true,
  "pre-commit": [
    "pre-commit-start",
    "lint",
    "pre-commit-done"
  ],
  "eslintConfig": {
    "extends": "eslint-config-synacor"
  },
  "eslintIgnore": [
    "build/*"
  ],
  "devDependencies": {
    "babel-eslint": "10.0.3",
    "classnames": "2.2.6",
    "copy-webpack-plugin": "4.6.0",
    "eslint": "6.5.1",
    "eslint-config-synacor": "3.0.5",
    "fs-extra": "8.1.0",
    "if-env": "1.0.4",
    "jest": "21.2.1",
    "memoize-one": "5.1.1",
    "merge": "2.1.1",
    "pre-commit": "1.2.2",
    "preact-cli": "2.2.1",
    "preact-markup": "1.6.0",
    "sass": "1.49.7",
    "sass-loader": "7.3.1",
    "sine-waves": "0.3.0",
    "standard": "14.3.4"
  },
  "dependencies": {
    "codemirror": "5.59.2",
    "in-view": "git+https://github.com/futurememories/in-view.git",
    "marked": "1.1.1",
    "preact": "8.5.2",
    "preact-compat": "3.19.0",
    "react-scrollable-anchor": "0.6.1",
    "safe-eval": "0.4.1",
    "throttle-debounce": "3.0.1",
    "webpack-remove-serviceworker-plugin": "1.0.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "ignore": [
      "build"
    ]
  }
}
